    <script>
        async function confirmClean(type) {
            const confirmed = confirm("‚ö†Ô∏è Are you sure you want to delete all " + type + " data?");
            if (!confirmed) return;

            try {
                const response = await fetch('/home/clean', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        type: type,
                        username: localStorage.getItem('username') // üî• fix: should be "username", not "user"
                    })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                console.log("‚úÖ Data cleaned successfully for type:", type);
                alert(`‚úÖ ${type} data cleared successfully!`);

            } catch (err) {
                console.error("‚ùå Error cleaning data:", err);
                alert("‚ùå Error cleaning " + type);
            }
        }
    </script>

